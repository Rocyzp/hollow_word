<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_longin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.pc.myapplication.activity.LonginActivity">

    <EditText
        android:hint="密码（必填）"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_alignEnd="@+id/userName"
        android:inputType="textPassword"
        android:layout_marginTop="50dp"
        android:id="@+id/passWord" />

    <EditText
        android:hint="服务器（必填）"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passWord"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/server_ip" />

    <Button
        android:text="注册"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/slf_longin"
        android:layout_marginStart="11dp"
        android:id="@+id/registion" />

    <Button
        android:text="登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:layout_below="@+id/server_ip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp" />

    <CheckBox
        android:text="自动登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/slf_longin"
        android:layout_alignBaseline="@+id/remenber_psd"
        android:layout_alignBottom="@+id/remenber_psd"
        android:layout_alignParentEnd="true" />

    <CheckBox
        android:text="记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/remenber_psd"
        android:layout_above="@+id/registion"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="18dp" />

    <EditText
        android:hint="用户名（必填）"
        android:gravity="center"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="78dp"
        android:id="@+id/userName"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/server_ip" />

</RelativeLayout>
